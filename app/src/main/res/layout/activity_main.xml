<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.sdacademy.gieysztor.michal.chatlayout.MainActivity">

    <LinearLayout
        android:id="@+id/interlocutorBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdgeLength="120dp"
        android:orientation="horizontal"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDy="20"
        android:shadowRadius="10"

        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            app:srcCompat="@drawable/ic_person_outline_black_24dp" />

        <TextView
            android:id="@+id/textInterlocutor"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_weight="12"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:text="Katie"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_weight="12"
            android:background="@drawable/message_backgroud"
            android:gravity="center_vertical"
            android:hint="Napisz coś..."
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sendMessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:onClick="sendMessageOnClick"
            android:background="@color/colorPrimary"
            app:srcCompat="@drawable/ic_send_black_24dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/messageBar"
        android:layout_below="@+id/interlocutorBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/messageScroll"
        android:fadingEdgeLength="50dp"
        android:requiresFadingEdge="vertical">

